
.row {
	background-color: #fff;
	padding: 50rpx 50rpx;
	padding-bottom: 50rpx;
	border-bottom: 1rpx dashed #d3d3d3;
}
.row > .pic{
	width: 160rpx;
	height: 160rpx;
	vertical-align: top;
	overflow: hidden;
}
.row > .detail{
	position: relative;
	display: inline-block;
	width: 450rpx;
	height: 160rpx;
	padding-left: 20rpx;
	vertical-align: top;
	font-size: 15px;
	color: #4b566a;
}
.row > .detail > .tips{
	position: absolute;
	bottom: 0rpx;
	left: 20rpx;
	width: 510rpx;
	font-size: 13px;
	padding: 0;
}
.row > .detail > .tips > .btn{
	float: right;
	color: #e01d19;
	text-decoration: underline;
}


.row > .detail > .tips >.status{
	display: inline-block;
	background-color: #e01d19;
	font-size: 12px;
	width: 50px;
	height: 20px;
	text-align: center;
	line-height: 20px;
	border-radius: 5px;
	color: #fff;
}



.footer {
	font-size: 13px;
	position: fixed;
	left: 0;
	bottom: 0;
	height: 120rpx;
	width: 100%;
	border-top: 1rpx solid #d3d3d3;
	background-color: #fff;
}

.footer > .price {
	display: inline-block;
	height: 120rpx;
	line-height: 120rpx;
	width: 400rpx;
	padding-left: 50rpx;
	color: #e01d19;
}

.footer > .buy {
	float: right;
	display: inline-block;
	line-height: 120rpx;
	width: 250rpx;
	padding: 0 40rpx;
	text-align: center;
	background-color: #e01d19;
	color: #fff;
	border-radius: 0px;
	font-size: 14px;
}



.buy-msg {
	padding: 20rpx 0 40rpx;
	border-bottom: 1rpx dashed #d3d3d3;
}

.buy-title {
	margin-top: 40rpx;
	margin-left: 40rpx;
	font-size: 15px;
	font-color: #999;
}
.content {
	font-size: 14px;
	color: #333;
	margin: 20rpx 40rpx 20rpx 160rpx;
	padding-left: 20rpx;
	width: 500rpx;
	line-height: 1.8;
}
.content.name:before {
	content: '收件姓名:';
	position: absolute;
	left: 30rpx;
}
.content.phone:before {
	content: '收件电话:';
	position: absolute;
	left: 30rpx;
}
.content.address:before {
	content: '收货地址:';
	position: absolute;
	left: 30rpx;
}