
.pic-con {
	margin-top: 20rpx;
	text-align: center;
}
.pic-con > .pic {
	width: 450rpx;
	height: 450rpx;
}

.name-con {
	margin: 10px 0 10px 20px;
}
.name-con > .name {
	font-size: 16px;
	color: #4b566a;
	line-height: 1;
}

.price-con {
	margin-top: 10px;
	margin-left: 20px;
}
.price-con > .floor_price {
	font-size: 24px;
	color: #e4393c;
}
.price-con > .price {
	margin-left: 20px;
	font-size: 12px;
	color: #aaa;
}


.message {
	height: 30px;
	line-height: 30px;
}

.range {
	display: inline-block;
	margin-left: 20px;
	border-radius: 5px;
	width: 120px;
	height: 24px;
	text-align: center;
	background-color: #e4393c;
	color: #fff;
	font-size: 12px;
	line-height: 24px;
	vertical-align: middle;

}

.join {
	margin-right: 20px;
	float: right;
	font-size: 12px;
	color: #e4393c;
	vertical-align: middle;
}


.buy-btn {
	margin-top: 30px;
	margin-bottom: 10px;
	width: 500rpx;
	height: 70rpx;
	background-color: #e4393c;
	line-height: 70rpx;
	text-align: center;
	border-radius: 35rpx;
	color: #fff;
	font-size: 14px;
}
.buy-btn2 {
	margin-top: 0px;
	margin-bottom: 20px;
	width: 500rpx;
	height: 70rpx;
	background-color: #fff;
	line-height: 70rpx;
	text-align: center;
	border-radius: 35rpx;
	color: #e4393c;
	border: 1px solid #e4393c;
	font-size: 14px;
}



.detail {
	padding: 20rpx 50rpx;
	border-top: 1rpx solid #dfdfdf;
}

.detail > .tips {
	margin-top: 40rpx;
	font-size: 13px;
}
.detail > .tips > .price {
	color: #e01d19;
	font-size: 20px;
	font-weight: 900;
}
.detail > .tips > .got {
	float: right;
	vertical-align: bottom;
	color: #e01d19;
}


.rule {
	margin: 30rpx 40rpx 80rpx 40rpx;
	padding-top: 40rpx;
	color: #999;
}
.rule.border {
	border-top: 1rpx solid #ddd;
}
.rule > .title {
	color: #999;
	font-size: 14px;
}

.rule > .content {
	font-size: 12px;
}






.popup{
	position: fixed;
	left: 0;
	top: 0;
	z-index: 100;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,.4)
}

.popup > .content {
	width: 500rpx;
	height: 600rpx;
	position: absolute;
	left: 125rpx;
	top: 20%;
}
.popup > .content > .bg{
	position: absolute;
	width: 100%;
	height: 510rpx;
	z-index: -99;
}
.popup > .content > .min-title{
	margin-top: 100rpx;
	margin-left: 40rpx;
	color: #e4393c;
}
.popup > .content > .large-title{
	text-align: center;
	margin-top: 190rpx;
	display: block;
	color: #e4393c;
	line-height: 100rpx;
	font-size: 30px;
	font-weight: 900;
}
.popup > .content > .shareBtn{
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #e4393c;
	border-radius: 0;
	border-width: 0;
	color: #fff;
	font-size: 15px;
}
.popup > .content > .close{
	z-index: 111;
	position: absolute;
	top: 10rpx;
	right: 10rpx;
	width: 16px;
	height: 16px;
}