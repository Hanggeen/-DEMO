.list {
	padding: 30rpx;
}

.title {
	color: #e01d19;
	font-size: 20px;
}

.nothing {
	display: block;
	text-align: center;
	margin-top: 100px;
	color: #aaa;
}

.row {
	margin: 50rpx 0;
	padding-bottom: 50rpx;
	border-bottom: 1rpx solid #d3d3d3;
}
.row > .pic{
	width: 160rpx;
	height: 160rpx;
	vertical-align: top;
	overflow: hidden;
}
.row > .detail{
	position: relative;
	display: inline-block;
	width: 510rpx;
	height: 160rpx;
	padding-left: 20rpx;
	vertical-align: top;
	font-size: 15px;
	color: #4b566a;
}
.row > .detail > .tips{
	position: absolute;
	bottom: 0rpx;
	left: 20rpx;
	width: 510rpx;
	font-size: 13px;
	padding: 0;
}
.row > .detail > .tips > .btn{
	float: right;
	color: #e01d19;
	text-decoration: underline;
}
.row > .detail > .tips > .current_price{
	color: #e01d19;
	font-size: 15px;
	font-weight: 900;
}
.row > .detail > .tips >.status{
	display: inline-block;
	background-color: #e01d19;
	font-size: 12px;
	width: 50px;
	height: 20px;
	text-align: center;
	line-height: 20px;
	border-radius: 5px;
	color: #fff;
}

