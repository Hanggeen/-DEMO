/*banner*/
.banner {
	width: 750rpx;
	height: 500rpx;
}

/*列表*/
.list {
	padding: 30rpx;
}
.list > .title {
	color: #e01d19;
	font-size: 20px;
}
.list > .nothing {
	display: block;
	text-align: center;
	margin-top: 100px;
	color: #aaa;
}
.list > .row {
	margin: 50rpx 0;
	padding-bottom: 50rpx;
	border-bottom: 1rpx solid #d3d3d3;
}
.list > .row > .pic{
	width: 160rpx;
	height: 160rpx;
	vertical-align: top;
	overflow: hidden;
}
.list > .row > .detail{
	position: relative;
	display: inline-block;
	width: 510rpx;
	height: 160rpx;
	padding-left: 20rpx;
	vertical-align: top;
	font-size: 13px;
	color: #4b566a;
}
.list > .row > .detail > .tips{
	position: absolute;
	bottom: 0rpx;
	left: 20rpx;
	width: 510rpx;
	font-size: 13px;
	padding: 0;
}
.list > .row > .detail > .tips > .price-frame{
	font-size: 12px;
	height: 30px;
	line-height: 30px;
	background-color: #f4f4f4;
	border-radius: 10px;
	padding-left: 20px;
}
.list > .row > .detail > .tips > .price-frame> .btn{
	font-size: 14px;
	float: right;
	color: #fff;
	background-color: #e01d19;
	padding: 0px 10px;
	border-radius: 0px 15px 15px 0;
}
.list > .row > .detail > .tips > .price-frame> .target{
	font-weight: 900;
}

/*购物车*/
.car {
	border-radius: 50%;
	position: fixed;
	bottom: 30rpx;
	right: 30rpx;
	width: 50px;
	height: 50px;
	text-align: center;
	background-color: #e01d19;
	z-index: 10;
}
.car > .car-img {
	margin-top: 9px;
	width: 32px;
	height: 32px;
}

/*授权层*/
.authorize {
	z-index: 999;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	opacity: 0;
}

/*小屏设备样式兼容*/
@media screen and (max-width: 330px) {
	.list > .row > .detail > .tips > .price-frame{
		padding-left: 2px;
	}
	.list > .row > .detail > .tips > .price-frame{
		font-size: 12px;
	}
	.list > .row > .detail > .tips > .price-frame> .btn{
		border-radius: 0px 10px 10px 0;
	}
}


